<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android1:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Menu Order"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="37dp"
        android:text="顧客 ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editText1_nameJuice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1_test"
        android:layout_alignBottom="@+id/textView1_test"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/textView1_test"
        android:inputType="number"
        android:maxLines="1"
        android:ems="10" />

    <Spinner
        android1:id="@+id/spinner1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/editText1_nameJuice"
        android1:layout_marginLeft="150dp"
        android1:layout_marginTop="27dp" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView2"
        android1:layout_alignRight="@+id/textView1_test"
        android1:layout_marginBottom="22dp"
        android1:text="甜度"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignRight="@+id/textView3"
        android1:layout_alignTop="@+id/textView2"
        android1:text="冰塊"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android1:id="@+id/textView5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/textView2"
        android1:layout_marginTop="19dp"
        android1:layout_toLeftOf="@+id/editText1_nameJuice"
        android1:text="容量"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android1:id="@+id/radioSugar"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/editText1_nameJuice"
        android1:layout_alignTop="@+id/textView3"
        android1:layout_marginLeft="36dp"
        android1:orientation="horizontal" >

        <RadioButton
            android1:id="@+id/radio0SugarMore"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="正常" />

        <RadioButton
            android1:id="@+id/radio1SugarNormal"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:layout_marginLeft="16dp"
            android1:text="半糖" />

        <RadioButton
            android1:id="@+id/radio2SugarLess"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="無糖" />
    </RadioGroup>

    <RadioGroup
        android1:id="@+id/radioIce"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/radioSugar"
        android1:layout_below="@+id/textView3"
        android1:orientation="horizontal" >

        <RadioButton
            android1:id="@+id/radio0IceMore"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="冰" />

        <RadioButton
            android1:id="@+id/radio1IceNormal"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="溫" />

        <RadioButton
            android1:id="@+id/radio2IceLess"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="熱" />
    </RadioGroup>

    <RadioGroup
        android1:id="@+id/radioCapicity"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/radioIce"
        android1:layout_alignTop="@+id/textView5"
        android1:orientation="horizontal" >

        <RadioButton
            android1:id="@+id/radio0CapacityMore"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="大" />

        <RadioButton
            android1:id="@+id/radio1CpacityNormal"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="中" />

        <RadioButton
            android1:id="@+id/radio2CapacityLess"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="小" />
    </RadioGroup>

    <TextView
        android1:id="@+id/textView6"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/textView5"
        android1:layout_below="@+id/radioCapicity"
        android1:layout_marginTop="48dp"
        android1:text="數量"
        android1:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android1:id="@+id/spinner2_number"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_alignTop="@+id/textView6"
        android1:layout_marginLeft="150dp" />

    <TextView
        android1:id="@+id/textView7"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/spinner1"
        android1:layout_marginTop="18dp"
        android1:layout_toLeftOf="@+id/radioIce"
        android1:text="商品目錄"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android1:id="@+id/tableLayout1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/editText1_nameJuice"
        android1:layout_marginLeft="100dp"
        android1:layout_toRightOf="@+id/radioSugar" >

        <TableRow
            android1:id="@+id/tableRow1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android1:id="@+id/tableRow2"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android1:id="@+id/tableRow3"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >
        </TableRow>

        <TableRow
            android1:id="@+id/tableRow4"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <Button
        android1:id="@+id/button1Upload"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBottom="@+id/spinner2_number"
        android1:layout_toRightOf="@+id/radioSugar"
        android1:text="資料存檔" />

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignTop="@+id/tableLayout1"
        android1:layout_marginLeft="66dp"
        android1:layout_toRightOf="@+id/tableLayout1"
        android1:text="總金額" />

    <TextView
        android1:id="@+id/textView8_Total"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_below="@+id/textView1_test"
        android1:layout_marginLeft="33dp"
        android1:layout_toRightOf="@+id/textView1"
        android1:text="0"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>